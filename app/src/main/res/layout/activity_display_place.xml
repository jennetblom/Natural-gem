<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_lightpurple"
    tools:context=".DisplayPlaceActivity">

    <ImageView
        android:id="@+id/imageDisplay"
        android:layout_width="313dp"
        android:layout_height="226dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDisplayText"
        app:srcCompat="@drawable/flower" />

    <TextView
        android:id="@+id/nameDisplayText"
        android:layout_width="315dp"
        android:layout_height="91dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hassafallsleden" />

    <TextView
        android:id="@+id/categoryDisplayText"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDisplay"
        tools:text="Promenadled" />

    <TextView
        android:id="@+id/infoDisplayText"
        android:layout_width="304dp"
        android:layout_height="311dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryDisplayText"
        tools:text="En idyllisk rundslinga i ett trolskt och spännande naturområde med vattenfall." />

</androidx.constraintlayout.widget.ConstraintLayout>